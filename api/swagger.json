        "enabled": {
          "type": "boolean",
          "example": "true",
          "description": "trueを指定した場合、センサーが有効となり falseの場合は無効となる。"
        }
      }
    },
    "LightState": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "example": "true",
          "description": "trueを指定した場合、点灯。falseを指定した場合消灯する"
        }
      }
    },
    "ProximityData": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "trueの場合、動作中。falseの場合、停止中"
        },
        "isNear": {
          "type": "boolean",
          "default": true,
          "description": "true: 近い. false: 遠い"
        },
        "maxRange": {
          "type": "number",
          "example": 10,
          "description": "検出可能な最大距離(cm)"
        },
        "value": {
          "type": "number",
          "example": 0,
          "description": "対象との距離(cm)"
        },
        "timeStamp": {
          "type": "number",
          "example": 1543117163400,
          "description": "センサーからデータを取得したタイミングのタイムスタンプ。UTC時間(ms)"
        }
      }
    },
    "LightData": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "trueの場合、動作中。falseの場合、停止中"
        },
        "value": {
          "type": "number",
          "example": 123,
          "description": "光量"
        },
        "timeStamp": {
          "type": "number",
          "example": 1543117163400,
          "description": "センサーからデータを取得したタイミングのタイムスタンプ。UTC時間(ms)"
        }
